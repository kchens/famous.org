//Content section
section.content
  padding:10px 0 0 0
  background:$colors-content-background

  &.padded-bottom
    padding-bottom: 5px

  .separator
    width:100%
    height:1px
    background:#576b84

  .example

    &.new
      margin-bottom: 90px

      p
        max-width: none

      h3
        color: $colors-content-foreground
        margin-top: 2em
        font-weight: $font-weight-bold
        font-family: $font-family-lato-light
        text-transform: uppercase


    &.padded-bottom
      padding-bottom: 90px

    color:$colors-content-foreground
    text-align:left
    max-width:1000px
    padding 0 50px
    margin:0 auto

    h2
      margin-top:80px
      font-family: $font-family-lato-hairline
      color:$colors-content-foreground
      font-size:48px
      font-weight: $font-weight-bold

    p
      font:$fonts-content-copy
      color:$colors-content-foreground
      font-size:16px
      line-height:25px
      margin:0

    img
      margin:80px 0 100px 0

    hr
      margin:100px 100px 0 0
      height:1px
      width:100%
      border:1px solid #587395

  @media screen and (max-width: $medium-width)

    .examples
      padding 0 50px

    .copy
      padding 110px 50px

  @media screen and (max-width: $small-width)

    .example
      padding 0 25px

      h2
        font-size:24px
        line-height:24px
      p
        font-size:16px
        line-height:16px

    .copy
      padding 110px 25px
